extends ../layouts/common.pug 
block content  
    h1 Login 

    if errors 
        each error in errors 
            .alert.alert-danger= error 

    form(method = "POST")
        .form-group 
            label.p-2(for="email") Email 
            input#email(type="text", name="email", class="form-control", value=values ?
            values.email : "") 
            //value bằng values nếu ko có values thì trả về rỗng ( '' )

        .form-group 
            label.p-2(for="password") Password
            input#password(type="text", name="password", class="form-control", value=values ?
            values.password : "")

        button.btn.btn-primary.m-2  Login 
